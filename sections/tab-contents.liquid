<section>
{{ 'section-tab-contents.css' | asset_url | stylesheet_tag }}


<div class="container">
  <ul class="shopify-tabs">
    <li class="current-tab" data-tab="tab-description">Description</li>
    <li data-tab="tab-specs">Sizing & Fit</li>
    <li data-tab="tab-delivery">Risk-Free Shopping</li>
    <li data-tab="tab-returns">Specs & care instructions</li>
  </ul>
  <div id="tab-description" class="shopify-tab-content current-tab">
      {{ product.description }}
  </div>
  <div id="tab-specs" class="shopify-tab-content">
    <h4 class="title toggler">Sizing & Fit</h4>
    <div class="block">
      {{product.metafields.custom.sizing}}
    </div>
  </div>
  <div id="tab-delivery" class="shopify-tab-content">
    <h4 class="title toggler">Risk-Free Shopping</h4>
    <div class="block">
      {{product.metafields.custom.guarantee}}
    </div>
  </div>
  <div id="tab-returns" class="shopify-tab-content">
    <h4 class="title toggler">Specs & care instructions</h4>
    <div class="block">
     {{product.metafields.custom.specs}}
   </div>
  </div>
</div>

</section>